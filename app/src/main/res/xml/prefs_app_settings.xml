<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/settings_cat_server_title">

        <Preference
            app:key="@string/prefs_server_settings"
            app:summary="@string/settings_server_settings_summary"
            app:title="@string/settings_server_settings_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_cat_app_history">

        <SwitchPreferenceCompat
            app:defaultValue="@bool/def_history_refresh_enabled_app"
            app:key="@string/prefs_history_refresh_app"
            app:summary="@string/settings_app_history_refresh_summary"
            app:title="@string/settings_app_history_refresh_title" />

        <ListPreference
            app:defaultValue="@string/def_history_refresh_time_app"
            app:dependency="@string/prefs_history_refresh_app"
            app:entries="@array/refresh_interval_names"
            app:entryValues="@array/refresh_interval"
            app:key="@string/prefs_history_refresh_interval_app"
            app:summary="@string/settings_app_history_refresh_interval_summary"
            app:title="@string/settings_app_history_refresh_interval_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_cat_events_title">

        <ListPreference
            app:defaultValue="@string/def_event_amounts_app"
            app:entries="@array/event_amounts_names"
            app:entryValues="@array/event_amounts"
            app:key="@string/prefs_event_amount"
            app:summary="@string/settings_app_events_amount_summary"
            app:title="@string/settings_app_events_amount_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_cat_app_safety">

        <SwitchPreferenceCompat
            app:defaultValue="@bool/def_grill_swipe_start"
            app:key="@string/prefs_grill_swipe_start"
            app:title="@string/settings_app_safety_start"
            app:summary="@string/settings_app_safety_start_summary" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_cat_app_shutdown">

        <SwitchPreferenceCompat
            app:defaultValue="@bool/def_probe_shutdown"
            app:key="@string/prefs_probe_shutdown"
            app:title="@string/settings_app_probe_shutdown"
            app:summary="@string/settings_app_probe_shutdown_summary" />

        <SwitchPreferenceCompat
            app:defaultValue="@bool/def_timer_shutdown"
            app:key="@string/prefs_timer_shutdown"
            app:title="@string/settings_app_timer_shutdown"
            app:summary="@string/settings_app_timer_shutdown_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_cat_updates">

        <SwitchPreferenceCompat
            app:defaultValue="@bool/def_app_updater_enabled"
            app:key="@string/prefs_app_updater_enabled"
            app:summary="@string/settings_update_enabled_summary"
            app:title="@string/settings_update_enabled" />

        <SwitchPreferenceCompat
            app:defaultValue="@bool/def_app_updater_download"
            app:key="@string/prefs_app_updater_download"
            app:summary="@string/settings_update_download_summary"
            app:title="@string/settings_update_download_title" />

        <ListPreference
            app:defaultValue="@string/def_app_updater_frequency"
            app:key="@string/prefs_app_updater_frequency"
            app:title="@string/settings_update_frequency"
            app:summary="@string/settings_update_frequency_summary"
            app:entries="@array/app_updater_frequency_names"
            app:entryValues="@array/app_updater_frequency_values"/>

        <Preference
            app:key="@string/prefs_app_updater_check_now"
            app:title="@string/settings_update_check_now"
            app:summary="@string/settings_update_check_now_summary"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/prefs_debug_cat"
        app:title="@string/settings_cat_debug">

        <Preference
            app:key="@string/prefs_firebase_token"
            app:summary="@string/settings_firebase_token_summary"
            app:title="@string/settings_firebase_token" />

        <SwitchPreferenceCompat
            app:key="@string/prefs_debug_logging"
            app:summary="@string/settings_debug_logging_summary"
            app:title="@string/settings_debug_logging" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/prefs_acra_cat"
        app:title="@string/settings_cat_acra">

        <SwitchPreferenceCompat
            android:key="@string/prefs_acra_enable"
            android:title="@string/settings_enable_acra"
            android:summary="@string/settings_acra_summary"
            android:defaultValue="@bool/def_acra_enabled"/>

        <SwitchPreferenceCompat
            app:dependency="@string/prefs_acra_enable"
            android:key="@string/prefs_acra_syslog_enable"
            android:title="@string/settings_acra_syslog"
            android:summary="@string/settings_acra_syslog_summary"
            android:defaultValue="@bool/def_acra_syslog_enabled"/>

        <EditTextPreference
            app:dependency="@string/prefs_acra_enable"
            android:key="@string/prefs_acra_user_email"
            android:title="@string/settings_acra_email"
            android:summary="@string/settings_acra_email_summary"/>

    </PreferenceCategory>

</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_cat_server_title">

        <Preference
            app:key="@string/prefs_server_address"
            app:title="@string/settings_server_address" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_cat_basic_auth_title">

        <SwitchPreferenceCompat
            app:key="@string/prefs_server_basic_auth"
            app:summary="@string/settings_basic_auth_summary"
            app:title="@string/settings_basic_auth_title" />

        <com.weberbox.pifire.ui.dialogs.PrefsUsernameDialog
            app:dependency="@string/prefs_server_basic_auth"
            app:key="@string/prefs_server_basic_auth_user"
            app:summary="@string/settings_username_summary"
            app:title="@string/settings_username" />

        <com.weberbox.pifire.ui.dialogs.PrefsPasswordDialog
            app:dependency="@string/prefs_server_basic_auth"
            app:key="@string/prefs_server_basic_auth_password"
            app:summary="@string/settings_password_summary"
            app:title="@string/settings_password" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_cat_security_title">

        <SwitchPreferenceCompat
            app:defaultValue="@bool/def_security_unsigned_cert"
            app:key="@string/prefs_server_unsigned_cert"
            app:summary="@string/settings_security_unsigned_cert_summary"
            app:title="@string/settings_security_unsigned_cert_title" />

    </PreferenceCategory>

</PreferenceScreen>
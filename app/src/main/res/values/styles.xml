<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text20Knockout" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/knockout_regular</item>
    </style>
    <style name="Text24Knockout" parent="@style/Text20Knockout">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text18Aller" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aller_font_family</item>
        <item name="fontFamily">@font/aller_font_family</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text18AllerNormal" parent="@style/Text18Aller">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/aller_font_family</item>
        <item name="fontFamily">@font/aller_font_family</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text15Aller" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aller_font_family</item>
        <item name="fontFamily">@font/aller_font_family</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text15AllerNormal" parent="@style/Text15Aller">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/aller_font_family</item>
        <item name="fontFamily">@font/aller_font_family</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text16Aller" parent="@style/Text15Aller">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text16AllerAlpha" parent="@style/Text16Aller">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#a6ffffff</item>
    </style>

    <style name="RoundProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBarStyle">?android:progressBarStyleHorizontal</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/bg_round_progress</item>
        <item name="android:rotation">180</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="BannerMessageTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MainButtonPrimary" parent="@style/TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_main_button_primary_selector</item>
        <item name="android:paddingTop">13.0dip</item>
        <item name="android:paddingBottom">13.0dip</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/knockout_regular</item>
    </style>
    <style name="MainButtonAccent" parent="@style/MainButtonPrimary">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_main_button_accent_selector</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogThemeMaterial" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleMaterial</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleMaterial</item>
    </style>

    <style name="NegativeButtonStyleMaterial" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PositiveButtonStyleMaterial" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextInputLayoutFilledBox" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/selector_stroke_color</item>
    </style>

    <style name="Theme.PiFire.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.PiFire.FullScreenDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="titleTextStyle">@style/Text18Aller</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorProbeProgress" />
                    <corners android:radius="@dimen/table_corner_radius" />
                </shape>
            </item>
            <item android:right="4dp">
                <shape>
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="@dimen/table_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="0%" android:scaleHeight="100%" android:scaleGravity="bottom">
            <layer-list>
                <item>
                    <shape>
                        <solid android:color="@color/colorAccent" />
                        <corners android:radius="@dimen/table_corner_radius" />
                    </shape>
                </item>
                <item android:right="4dp">
                    <shape>
                        <solid android:color="@color/colorLightGrey" />
                        <corners android:radius="@dimen/table_corner_radius" />
                    </shape>
                </item>
            </layer-list>
        </scale>
    </item>
</layer-list>
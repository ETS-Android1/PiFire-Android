<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorLightGrey" />
            <stroke android:color="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape
            android:innerRadiusRatio="100"
            android:shape="ring"
            android:thicknessRatio="2.1"
            android:useLevel="true">
            <gradient
                android:angle="0"
                android:centerColor="@color/colorTimerProgress"
                android:endColor="@color/colorTimerProgress"
                android:startColor="@color/colorTimerProgress"
                android:type="sweep"
                android:useLevel="false" />
        </shape>
    </item>
</layer-list>
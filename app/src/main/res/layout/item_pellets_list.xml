<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pellets_items_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="5dp">

    <TextView
        android:id="@+id/pellets_item"
        style="@style/Text15AllerBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_spacing"
        android:layout_marginTop="@dimen/default_spacing"
        android:layout_marginEnd="@dimen/default_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        android:layout_toStartOf="@+id/pellets_item_delete"
        android:textColor="@android:color/white"
        tools:text="@string/placeholder_text_view" />

    <ImageView
        android:id="@+id/pellets_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_ripple_trans"
        android:clickable="true"
        android:contentDescription="@string/delete"
        android:focusable="true"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_delete"
        app:tint="@color/colorAccentRed" />

    <TextView
        android:id="@+id/pellets_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/bg_gradient_radius_left"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/ic_launcher_splash" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_head_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/Text15AllerBold" />

        <View
            android:id="@+id/nav_head_divider"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/nav_head_app_name"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/nav_head_grill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text15AllerBold"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/nav_head_divider" />

    </RelativeLayout>

</LinearLayout>
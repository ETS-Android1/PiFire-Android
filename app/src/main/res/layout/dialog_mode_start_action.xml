<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="1.0"
    android:background="@drawable/bg_bottom_sheet_dialog"
    android:foreground="@android:color/transparent">

    <com.weberbox.pifire.ui.views.SwipeButton
        android:id="@+id/mode_swipe_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:visibility="invisible"
        app:button_background="@drawable/bg_swipe_shape_button"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/ic_lock_closed"
        app:button_image_enabled="@drawable/ic_lock_open"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:button_trail_enabled="false"
        app:initial_state="disabled"
        app:inner_text="@string/swipe_to_start"
        app:inner_text_background="@drawable/bg_swipe_shape_rounded"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@color/colorWhite"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp" />

    <TableLayout
        android:id="@+id/start_mode_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_dialog"
        android:padding="@dimen/default_spacing"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/dialog_start_button_table"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/mode_start_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_trans"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/default_spacing">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/placeholder_img"
                    android:src="@drawable/ic_timer_start" />

                <TextView
                    style="@style/Text24Knockout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/grill_mode_start"
                    android:textSize="@dimen/action_dialog_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mode_monitor_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_ripple_trans"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/default_spacing">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/placeholder_img"
                    android:src="@drawable/ic_grill_monitor" />

                <TextView
                    style="@style/Text24Knockout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/grill_mode_monitor"
                    android:textSize="@dimen/action_dialog_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mode_stop_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ripple_trans"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/default_spacing">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/placeholder_img"
                    android:src="@drawable/ic_timer_stop" />

                <TextView
                    style="@style/Text24Knockout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/grill_mode_stop"
                    android:textSize="@dimen/action_dialog_text" />

            </LinearLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:paddingStart="@dimen/large_spacing"
    android:paddingTop="@dimen/default_spacing"
    android:paddingEnd="@dimen/large_spacing">

    <ProgressBar
        android:id="@+id/dialog_listview_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/default_spacing"
        android:paddingBottom="@dimen/default_spacing" />

    <TextView
        android:id="@+id/dialog_listview_tv"
        style="@style/Text16Aller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/default_spacing"
        android:paddingBottom="@dimen/default_spacing"
        android:textAlignment="center"
        android:textStyle="normal"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/dialog_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:visibility="invisible" />

</FrameLayout>
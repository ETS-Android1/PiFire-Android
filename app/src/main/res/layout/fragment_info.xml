<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loading_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:layout_marginTop="-7dp"
        android:visibility="gone"
        android:indeterminateTintMode="src_in"
        android:indeterminateTint="@color/colorAccent"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/info_pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/info_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/system_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/system_inner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/system_card_header"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/bg_card_view_header"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/system_header_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:contentDescription="@string/placeholder_img"
                            android:src="@drawable/ic_menu_about"
                            app:layout_constraintBottom_toBottomOf="@+id/system_card_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/Text18AllerNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:gravity="center"
                            android:text="@string/info_system_info"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/system_card_header"
                            app:layout_constraintStart_toEndOf="@+id/system_header_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/current_comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryLight"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/system_card_header">

                            <TextView
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/default_spacing"
                                android:text="@string/info_cpu" />


                            <TextView
                                android:id="@+id/cpu_info_text"
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_spacing"
                                android:layout_marginEnd="@dimen/default_spacing"
                                android:lineSpacingExtra="-5dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/temp_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryLight"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/current_comments">

                            <TextView
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/default_spacing"
                                android:text="@string/info_cpu_temp" />

                            <TextView
                                android:id="@+id/temp_info_text"
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_spacing"
                                android:layout_marginEnd="@dimen/default_spacing"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/network_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryLight"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/temp_info">

                            <TextView
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/default_spacing"
                                android:text="@string/info_network" />


                            <TextView
                                android:id="@+id/network_info_text"
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_spacing"
                                android:layout_marginEnd="@dimen/default_spacing"
                                android:layout_marginBottom="@dimen/small_spacing"
                                android:textStyle="normal" />


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/brands_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/system_card_view"
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/brands_inner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/brands_card_header"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/bg_card_view_header"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/brands_header_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:contentDescription="@string/placeholder_img"
                            android:src="@drawable/ic_menu_about"
                            app:layout_constraintBottom_toBottomOf="@+id/brands_card_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/Text18AllerNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:text="@string/info_gpio"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/brands_card_header"
                            app:layout_constraintStart_toEndOf="@+id/brands_header_icon"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TableLayout
                            android:id="@+id/gpio_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="1.0"
                            android:animateLayoutChanges="true"
                            android:background="@color/colorPrimaryLight"
                            android:stretchColumns="*"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/brands_card_header">

                            <TableRow>

                                <FrameLayout android:layout_width="0dp">

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/default_spacing"
                                            android:text="@string/info_gpio_output_name" />

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:text="@string/info_gpio_output_auger"
                                            android:textStyle="normal" />

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:text="@string/info_gpio_output_fan"
                                            android:textStyle="normal" />

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:text="@string/info_gpio_output_igniter"
                                            android:textStyle="normal" />

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:text="@string/info_gpio_output_power"
                                            android:textStyle="normal" />

                                    </LinearLayout>
                                </FrameLayout>

                                <FrameLayout android:layout_width="0dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/default_spacing"
                                            android:text="@string/info_gpio_output_pin" />

                                        <TextView
                                            android:id="@+id/gpio_output_auger"
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/gpio_output_fan"
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/gpio_output_igniter"
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/gpio_output_power"
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:textStyle="normal" />

                                    </LinearLayout>
                                </FrameLayout>
                            </TableRow>

                            <TableRow>

                                <FrameLayout android:layout_width="0dp">

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/default_spacing"
                                            android:text="@string/info_gpio_input_name" />

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:text="@string/info_gpio_input_selector"
                                            android:textStyle="normal" />

                                    </LinearLayout>
                                </FrameLayout>

                                <FrameLayout android:layout_width="0dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/default_spacing"
                                            android:text="@string/info_gpio_input_pin" />

                                        <TextView
                                            android:id="@+id/gpio_input_selector"
                                            style="@style/Text15Aller"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/default_spacing"
                                            android:layout_marginEnd="@dimen/default_spacing"
                                            android:layout_marginBottom="@dimen/default_spacing"
                                            android:textStyle="normal" />

                                    </LinearLayout>
                                </FrameLayout>
                            </TableRow>
                        </TableLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/woods_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/brands_card_view"
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/woods_inner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/woods_card_header"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/bg_card_view_header"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/woods_header_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:contentDescription="@string/placeholder_img"
                            android:src="@drawable/ic_menu_about"
                            app:layout_constraintBottom_toBottomOf="@+id/woods_card_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/Text18AllerNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:gravity="center"
                            android:text="@string/info_uptime"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/woods_card_header"
                            app:layout_constraintStart_toEndOf="@+id/woods_header_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/uptime_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryLight"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/woods_card_header">

                            <TextView
                                android:id="@+id/uptime_info_text"
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/default_spacing"
                                android:autoSizeTextType="uniform"
                                android:maxLines="2"
                                android:textAlignment="center"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/editor_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/woods_card_view"
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/editor_inner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/editor_card_header"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/bg_card_view_header"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/editor_header_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:contentDescription="@string/placeholder_img"
                            android:src="@drawable/ic_menu_about"
                            app:layout_constraintBottom_toBottomOf="@+id/editor_card_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/Text18AllerNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/default_spacing"
                            android:text="@string/info_credits"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/editor_card_header"
                            app:layout_constraintStart_toEndOf="@+id/editor_header_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/credits_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryLight"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editor_card_header">

                            <TextView
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/default_spacing"
                                android:text="@string/info_credits_text"
                                android:textStyle="normal" />

                            <TextView
                                style="@style/Text15Aller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/default_spacing"
                                android:text="@string/info_credits"
                                android:textStyle="normal" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/info_licenses_recycler"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pellets_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loading_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminateTintMode="src_in"
        android:max="100"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/load_out_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_spacing"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/load_out_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/load_out_card_header"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_card_view_header"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/load_out_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:src="@drawable/ic_tree"
                android:contentDescription="@string/placeholder_img"
                app:layout_constraintBottom_toBottomOf="@+id/load_out_card_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Text18AllerNormal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:text="@string/pellets_current_load"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/load_out_card_header"
                app:layout_constraintStart_toEndOf="@+id/load_out_header_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/load_pellets_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:background="@drawable/bg_ripple_grey_button"
                android:clickable="true"
                android:text="@string/pellets_load_new"
                style="@style/Text15Aller"
                app:layout_constraintBottom_toBottomOf="@+id/load_out_card_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/current_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/load_out_card_header">

                <TextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_current_band"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/pellet_edit_card_header"
                    app:layout_constraintStart_toEndOf="@+id/pellet_edit_header_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/current_brand_text"
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_brand_holder"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/pellet_edit_card_header"
                    app:layout_constraintStart_toEndOf="@+id/pellet_edit_header_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_wood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_brand">

                <TextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_current_wood"
                    app:layout_constraintBottom_toBottomOf="@+id/current_brand"
                    app:layout_constraintStart_toEndOf="@+id/current_brand"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/current_wood_text"
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_wood_holder"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/current_brand"
                    app:layout_constraintStart_toEndOf="@+id/current_brand"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_wood">

                <TextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_current_rating"
                    app:layout_constraintBottom_toBottomOf="@+id/current_rating"
                    app:layout_constraintStart_toEndOf="@+id/current_rating"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/current_rating_text"
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_rating_5"
                    android:textStyle="normal"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="@+id/current_rating"
                    app:layout_constraintStart_toEndOf="@+id/current_rating"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_date_loaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_rating">

                <TextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_current_date"
                    app:layout_constraintBottom_toBottomOf="@+id/current_date_loaded"
                    app:layout_constraintStart_toEndOf="@+id/current_date_loaded"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/current_date_loaded_text"
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_date_holder"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/current_date_loaded"
                    app:layout_constraintStart_toEndOf="@+id/current_date_loaded"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_date_loaded">

                <TextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_spacing"
                    android:gravity="center"
                    android:text="@string/pellets_current_comments"
                    app:layout_constraintBottom_toBottomOf="@+id/current_comments"
                    app:layout_constraintStart_toEndOf="@+id/current_comments"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/current_comments_text"
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    android:text="@string/pellets_comments_holder"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/current_comments"
                    app:layout_constraintStart_toEndOf="@+id/current_comments"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/brands_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_spacing"
        android:layout_marginEnd="@dimen/default_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        android:layout_below="@+id/load_out_card_view"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/brands_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/brands_card_header"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_card_view_header"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/brands_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:src="@drawable/ic_pellet_edit"
                android:contentDescription="@string/placeholder_img"
                app:layout_constraintBottom_toBottomOf="@+id/brands_card_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Text18AllerNormal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:text="@string/pellets_brands"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/brands_card_header"
                app:layout_constraintStart_toEndOf="@+id/brands_header_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/add_brands_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:background="@drawable/bg_ripple_grey_button"
                android:clickable="true"
                android:text="@string/pellets_add"
                style="@style/Text15Aller"
                app:layout_constraintBottom_toBottomOf="@+id/brands_card_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/brands_recycler_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brands_card_header">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/brands_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/woods_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_spacing"
        android:layout_marginEnd="@dimen/default_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        android:layout_below="@+id/brands_card_view"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/woods_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/woods_card_header"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_card_view_header"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/woods_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:src="@drawable/ic_pellet_edit"
                android:contentDescription="@string/placeholder_img"
                app:layout_constraintBottom_toBottomOf="@+id/woods_card_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Text18AllerNormal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:text="@string/pellets_woods"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/woods_card_header"
                app:layout_constraintStart_toEndOf="@+id/woods_header_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/add_wood_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:background="@drawable/bg_ripple_grey_button"
                android:clickable="true"
                android:text="@string/pellets_add"
                style="@style/Text15Aller"
                app:layout_constraintBottom_toBottomOf="@+id/woods_card_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/woods_recycler_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/woods_card_header">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/woods_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/editor_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/woods_card_view"
        android:layout_marginStart="@dimen/default_spacing"
        android:layout_marginEnd="@dimen/default_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editor_inner"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">

            <View
                android:id="@+id/editor_card_header"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_card_view_header"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/editor_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:contentDescription="@string/placeholder_img"
                android:src="@drawable/ic_pellet_edit"
                app:layout_constraintBottom_toBottomOf="@+id/editor_card_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Text18AllerNormal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:text="@string/pellets_editor"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/editor_card_header"
                app:layout_constraintStart_toEndOf="@+id/editor_header_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/add_profile_button"
                style="@style/Text15Aller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_spacing"
                android:background="@drawable/bg_ripple_grey_button"
                android:clickable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/pellets_add"
                app:layout_constraintBottom_toBottomOf="@+id/editor_card_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/pellets_add_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/editor_card_header">

                <include
                    android:id="@+id/pellets_add_profile_container"
                    layout="@layout/layout_pellet_profile_add" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/editor_recycler_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pellets_add_profile">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/editor_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/logs_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editor_card_view"
        android:layout_marginStart="@dimen/default_spacing"
        android:layout_marginEnd="@dimen/default_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/logs_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/logs_card_header"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_card_view_header"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/logs_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:contentDescription="@string/placeholder_img"
                android:src="@drawable/ic_menu_history"
                app:layout_constraintBottom_toBottomOf="@+id/logs_card_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Text18AllerNormal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/default_spacing"
                android:gravity="center"
                android:text="@string/pellets_log"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/logs_card_header"
                app:layout_constraintStart_toEndOf="@+id/logs_header_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/logs_recycler_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logs_card_header">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/logs_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
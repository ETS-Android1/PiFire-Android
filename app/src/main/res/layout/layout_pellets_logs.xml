<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logs_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/logs_card_header"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_card_view_header"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logs_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/default_spacing"
            android:contentDescription="@string/placeholder_img"
            android:src="@drawable/ic_menu_history"
            app:layout_constraintBottom_toBottomOf="@+id/logs_card_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/Text18AllerNormal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/default_spacing"
            android:gravity="center"
            android:text="@string/pellets_log"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/logs_card_header"
            app:layout_constraintStart_toEndOf="@+id/logs_header_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/logs_recycler_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logs_card_header">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/logs_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logs_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logs_card_header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp">

                <View
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:contentDescription="@string/placeholder_text_view"
                    android:gravity="center"
                    android:text="@string/pellets_rating_4"
                    app:autoSizeTextType="uniform"
                    app:tint="@color/placeholderColor" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:background="@color/colorPrimaryLight"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp">

                <View
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <TextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:contentDescription="@string/placeholder_text_view"
                    android:gravity="center"
                    android:text="@string/pellets_rating_4"
                    app:autoSizeTextType="uniform"
                    app:tint="@color/placeholderColor" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp">

                <View
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:contentDescription="@string/placeholder_text_view"
                    android:gravity="center"
                    android:text="@string/pellets_rating_4"
                    app:autoSizeTextType="uniform"
                    app:tint="@color/placeholderColor" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp">

                <View
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:contentDescription="@string/placeholder_text_view"
                    android:gravity="center"
                    android:text="@string/pellets_rating_4"
                    app:autoSizeTextType="uniform"
                    app:tint="@color/placeholderColor" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp">

                <View
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="@dimen/default_spacing"
                    android:layout_marginEnd="@dimen/default_spacing"
                    android:layout_marginBottom="@dimen/default_spacing"
                    android:background="@drawable/bg_event_placeholder" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text15Aller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/default_spacing"
                    android:contentDescription="@string/placeholder_text_view"
                    android:gravity="center"
                    android:text="@string/pellets_rating_4"
                    app:autoSizeTextType="uniform"
                    app:tint="@color/placeholderColor" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
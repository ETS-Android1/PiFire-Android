<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/colorPrimaryLight" >

    <View
        android:id="@+id/event_date_text_holder"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/default_spacing"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_event_placeholder"
        android:alpha="0.5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_ripple_pellet_delete"
        android:clickable="true"
        android:contentDescription="@string/placeholder_img"
        android:paddingStart="30dp"
        android:paddingTop="@dimen/default_spacing"
        android:paddingEnd="30dp"
        android:paddingBottom="@dimen/default_spacing"
        android:src="@drawable/ic_delete"
        app:tint="@color/placeholderColor" />

</RelativeLayout>
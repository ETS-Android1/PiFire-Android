<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight">

        <LinearLayout
            android:id="@+id/current_brand_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorPrimaryLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/current_wood"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

            <View
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_wood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorPrimaryLight"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_brand_placeholder">

            <View
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

            <View
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_rating_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorPrimaryLight"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_wood">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

            <View
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_date_loaded_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorPrimaryLight"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_rating_placeholder">

            <View
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

            <View
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_comments_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_date_loaded_placeholder">

            <View
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/default_spacing"
                android:layout_marginEnd="@dimen/default_spacing"
                android:layout_marginBottom="@dimen/default_spacing"
                android:alpha="0.5"
                android:background="@drawable/bg_event_placeholder" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/bg_gradient_radius"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_header_desc"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_head_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/Text15Aller" />

        <View
            android:id="@+id/nav_head_divider"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/nav_head_app_name"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/nav_head_grill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text15Aller"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/nav_head_divider" />

    </RelativeLayout>

</LinearLayout>